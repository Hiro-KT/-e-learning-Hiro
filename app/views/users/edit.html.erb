 <h1 class="text-center">EDIT</h1>

 <div class="container">

    <%= form_for @user do |f| %>
        <div class ="form-group">
            <%= f.label :Name %>
            <%= f.text_field :name, class: 'form-control' %>
        </div>
        <div class="form-group">
            <%= f.label :Email %>
            <%= f.email_field :email, class: 'form-control' %>
        </div>
        <div class="form-group">
            <%= f.label :Password %>
            <%= f.password_field :password, class: 'form-control' %>
            <small id="passwordHelp" class="form-text text-muted">We need more than 6 characters.</small>
        </div>
        <div class="form-group">
            <%= f.label :Password_confirmation%>
            <%= f.password_field :password, class: 'form-control' %>
            <small id="passwordHelp" class="form-text text-muted">Need to put the same password.</small>
        </div>

        <button type="submit" class="btn btn-primary w-100"> Change your profile</button>
    <% end %>

</div>

