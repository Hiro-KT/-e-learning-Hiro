<h1 class="m-3 mt-5">Categories</h1>

<div class="text-right m-2">
    <%= link_to "All" , "#" , class:"m-1" %>
    <%= link_to "Learned" , "#" , class: "m-1" %>
    <%= link_to "Not learned", "#" , class: "btn btn-info m-1" %>
</div>
<div class="container">
    <div class="row justify-content-around">
        <% @categories.each do |category| %>
            <div class="card col-3 m-2">
                <div class="category-name">
                    <%= category.title %>
                </div>
                <%= category.description %>
                <% if category.get_lesson(current_user).nil? %>
                    <%= button_to "Learn" , lessons_path({category_id: category.id}) , class:" btn btn-info m-3 " %>
                <% else %>
                    <%= link_to "Show Result" ,lessons_path(category.get_lesson(current_user)) , class: "btn btn-info m-3" %>
                <% end %>
                </div>
        <% end %>
    </div>
</div>