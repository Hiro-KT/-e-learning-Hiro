<h1 class="text-center">Administration Users</h1>
<hr class="col-8">

<div class="container">
    <div class="row justify-content-around">
        <% @users.each do |user| %>
            <div class="card col-3 m-3">
                <%= image_tag gravatar_for(user) ,class: "rounded-circle mt-3" %>
                <%= link_to user.name, admin_user_path(user) ,class: "text-center m-3" %>
                <p class="text-center"><%= user.email %></p>

                <% if user.is_admin %>
                    <div class="button-add">
                        <%= button_to "Remove", remove_admin_admin_user_path(user) , method: :put , class: "btn btn-info mb-2" %>
                    </div>
                <% else %>
                    <div class="button-add">
                        <%= button_to "Add", add_admin_admin_user_path(user) , method: :put , class: "btn btn-info mb-2" %>
                    </div>
                <% end %>

            </div>
        <% end %>
    </div>
</div>