<div class="category-title">
    <%= @category.title %>
</div>

<div class="btn-new">
    <%= link_to "New Word" , new_admin_category_word_path(@category) , class: "btn  btn-info m-3" %>
</div>

<table class="mt-4">
    <thead>
        <tr>
            <th>Word</th>
            <th>Answer</th>
            <th>Settings</th>
        </tr>
    </thead>

    <tbody>
        <% @words.each do |word| %>
        <tr>
            <td><%= word.content %></td>
            <td><%= word.correct_answer.content %></td>
            <td><%= link_to "Edit" , edit_admin_category_word_path(@category , word) , class: "btn btn-info" %>
             / <%= link_to "Delete" , method: :delete ,class: "btn btn-danger" %></td>
        </tr>
        <% end %>
    </tbody>
</table>

