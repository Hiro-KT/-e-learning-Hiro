<h1 class="text-center m-3"><%= @lesson.category.title %></h1>
<div class="number">
    Result: <%= @lesson.correct_answers %> of <%= @lesson.words.count %>
</div>

<table class="mt-4">
    <thead>
        <tr>
            <th>Word</th>
            <th>Your Answer</th>
            <th>Correct Answer</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
            <% @lesson.answers.each do |answer| %>
                <tr>
                    <td><%= answer.word.content %></td>
                    <td><%= answer.choice.content %></td>
                    <td><%= answer.word.correct_answer.content %></td>
                    <% if answer.choice.is_correct %>
                        <td>OK</td>
                    <% else %>
                        <td>Oops!</td>
                    <% end %>
                </tr>
            <% end %>
    </tbody>
</table>

<div class="text-center">
    <%=link_to "Back to lessons", categories_path , class: "btn btn-primary mt-3" %>
</div>